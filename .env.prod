APP_ENV=production
APP_PORT=80 # Port par défaut pour les web services Docker

# Database for production (these will be overridden by Render/Azure secrets)
DB_HOST=db_prod # Placeholder, sera remplacé par l'hôte de la DB managée
DB_PORT=3306 # Placeholder
DB_DATABASE=mysoutoutenance # Placeholder
DB_USER= # Placeholder
DB_PASSWORD= # Placeholder

# Session configuration for production
SESSION_LIFETIME=3600
SESSION_DOMAIN=gestionmysoutenance.live # Remplacez par votre domaine de production

# SMTP for production (Zoho Mail SMTP)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_AUTH=true
SMTP_USER=no-reply@gestionmysoutenance.live # Votre adresse email Zoho Mail

SMTP_PASS= # This will be ZOHO_MAIL_PASSWORD secret on Render/Azure
SMTP_SECURE=tls # Ou ssl si vous utilisez le port 465
MAIL_FROM_ADDRESS=no-reply@gestionmysoutenance.live
MAIL_FROM_NAME=GestionMySoutenance