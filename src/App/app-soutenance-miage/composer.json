{
  "name": "ufhb/app-soutenance-miage",
  "description": "Plateforme de gestion des soutenances MIAGE pour l'Université Félix Houphouët-Boigny",
  "type": "project",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "monolog/monolog": "^3.2",
    "phpmailer/phpmailer": "^6.7",
    "twig/twig": "^3.4",
    "symfony/dotenv": "^6.1",
    "symfony/routing": "^6.1",
    "symfony/http-foundation": "^6.1",
    "mpdf/mpdf": "^8.1",
    "phpoffice/phpspreadsheet": "^1.25",
    "phpoffice/phpword": "^1.0",
    "predis/predis": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/var-dumper": "^6.1",
    "phpstan/phpstan": "^1.9"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "process-timeout": 3600
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "serve": "php -S localhost:8080 -t public/"
  }
}