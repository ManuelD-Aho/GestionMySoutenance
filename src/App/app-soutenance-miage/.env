# Configuration générale de l'environnement
APP_ENV=dev
APP_DEBUG=true
APP_NAME="Plateforme de Gestion des Soutenances MIAGE - UFR-MI"
APP_URL=http://localhost:8080

# Configuration de la base de données
DB_HOST=db
DB_PORT=3306
DB_NAME=universite
DB_USER=miage_user
DB_PASSWORD=miage_password
DB_ROOT_PASSWORD=root_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Configuration des uploads
UPLOAD_MAX_SIZE=20M
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,zip,rar,jpg,jpeg,png
UPLOAD_PATH=/var/www/html/public/uploads

# Configuration du cache
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
CACHE_PREFIX=miage_

# Configuration régionale
TIMEZONE=Africa/Abidjan
DEFAULT_LANG=fr
DATE_FORMAT="d/m/Y"
TIME_FORMAT="H:i:s"
CURRENCY=XOF

# Configuration de session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Configuration de la journalisation
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_MAX_FILES=30
