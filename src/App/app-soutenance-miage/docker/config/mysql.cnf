[mysqld]
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-authentication-plugin = mysql_native_password

# Optimisations pour les environnements avec coupures de courant
innodb_buffer_pool_size = 128M
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 8M
innodb_flush_method = O_DIRECT
max_connections = 100
table_open_cache = 400
thread_cache_size = 10

# Optimisations pour les disques lents et l'infrastructure locale
query_cache_size = 32M
query_cache_type = 1
tmp_table_size = 32M
max_heap_table_size = 32M
sort_buffer_size = 4M
join_buffer_size = 4M

# Durabilité et protection contre les coupures électriques
sync_binlog = 0
innodb_doublewrite = 1
innodb_file_per_table = 1
innodb_flush_neighbors = 0
innodb_io_capacity = 200
innodb_write_io_threads = 8
innodb_read_io_threads = 8

# Configuration du timeout plus élevé
wait_timeout = 600
interactive_timeout = 600
net_read_timeout = 120
net_write_timeout = 120

# Configuration du format de date pour la Côte d'Ivoire
default_time_zone = '+00:00'

[client]
default-character-set = utf8mb4